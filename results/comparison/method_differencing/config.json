{
  "preprocessing": {
    "normalization": "histogram_matching",
    "resize_method": "crop"
  },
  "detection": {
    "cva": {
      "magnitude_threshold": "otsu",
      "manual_threshold": 0.1
    },
    "method": "differencing",
    "ratio_threshold": 0.3
  },
  "postprocessing": {
    "filtering": {
      "connectivity": 8,
      "min_area_pixels": 50
    },
    "morphological": {
      "kernel_size": 3,
      "operations": [
        "open",
        "close"
      ]
    }
  },
  "evaluation": {
    "metrics": [
      "precision",
      "recall",
      "f1",
      "iou"
    ],
    "save_report": true
  }
}